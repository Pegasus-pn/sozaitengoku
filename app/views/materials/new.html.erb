<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">新規投稿</h1>
    </div>
  </div>
</section>

<% if @material.errors.any? %>
  <div class="notification is-danger">
    <h2><%= pluralize(@material.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
    <ul>
      <% @material.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @material do |f| %>
          <div class="field">
            <%= f.label :title, "素材名", class: "label" %>
            <%= f.text_field :title, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :body, "概要欄", class: "label" %>
            <%= f.text_area :body, class: "textarea" %>
          </div>
            <!--
            <%= f.label :image %>
            <%= f.attachment_field :image %>
            -->
          <div class="field">
            <%= f.label :video, "動画", class: "label" %>
            <%= f.file_field :video, class: "input", :accept => 'video/*' %>
          </div>
          <%= f.submit "投稿", class: "button is-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
