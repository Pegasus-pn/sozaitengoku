<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        素材詳細
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-7">
        <div class="card">
            <div class="card-image">
              <figure class="image">
                  <%= video_tag @material.video, controls: true %>
              </figure>
            </div>
          <div class="card-content">
            <div class="madia">
              <div class="media-content">
                <p class="title is-4"><%= @material.title %></p>
              </div>
            </div>
            <div class="content">
              <div class="content">
                <% if current_user.already_liked?(@material) %>
                  <%= link_to material_likes_path(@material), method: :delete do %>
                  <i class="fas fa-heart"></i>
                  <% end %>
                <%= @material.likes.count %>
                <% else %>
                <%= link_to material_likes_path(@material), method: :post do %>
                <i class="far fa-heart"></i>
                <% end %>
                <%= @material.likes.count %>　
                <% end %>
              <div>
              <table class="table is-narrow">
                <tr>
                  <th>概要欄</th>
                </tr>
                <tr>
                  <td><%= simple_format @material.body %></td>
                </tr>
              </table>
              <% if @material.user.id == current_user.id %>
                <%= link_to "編集", edit_material_path(@material), class: "button is-success" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="column is-4">
        <article class="panel is-link">
          <p class="panel-heading">
            <%= @material.user.username %>
          </p>
          <div class="panel-block">  
            <p class="control">
              <%= @material.user.profile %>
            </p>
          </div>
          <%= link_to user_path(@material.user), class: "panel-block" do %>
            <span class="panel-icon">
              <i class="fas fa-user" aria-hidden="true"></i>
            </span>
            <%= @material.user.username %>　さんのページへ
          <% end %>
        </article>
      </div>
    </div>
  </div>
</section>

  



